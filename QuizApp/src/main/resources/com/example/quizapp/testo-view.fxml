<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Titolo principale -->
        <Label fx:id="titleLabel" text="Titolo">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Timer visuale basato sul tempo -->
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Label fx:id="timeLabel" text="00:00" textFill="#333333">
                    <font>
                        <Font name="Courier New Bold" size="20.0" />
                    </font>
                </Label>
                <ProgressBar fx:id="timeProgressBar" prefHeight="20.0" prefWidth="300.0" progress="0.0" style="-fx-accent: #2196F3;" />
                <Label fx:id="timeInfoLabel" text="Timer in corso..." textFill="#666666">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- Area di visualizzazione testo -->
        <Label fx:id="displayTextLabel" alignment="CENTER" maxWidth="400.0" minHeight="150.0" prefHeight="150.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-padding: 10px;" text="Il testo apparirÃ  qui..." textAlignment="CENTER" wrapText="true">
            <font>
                <Font size="16.0" />
            </font>
        </Label>

        <!-- Label per informazioni aggiuntive -->
        <Label fx:id="statusLabel" text="In attesa del prossimo messaggio..." textFill="#666666">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
