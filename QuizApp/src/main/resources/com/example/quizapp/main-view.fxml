                            <Font name="Courier New Bold" size="20.0" />
                        </font>
                    </Label>
                    <ProgressBar fx:id="timeProgressBar" prefHeight="20.0" prefWidth="300.0" progress="0.0" style="-fx-accent: #2196F3;" />
                    <Label fx:id="timeInfoLabel" text="Timer in corso..." textFill="#666666">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                </children>
            </VBox>

            <!-- Area di visualizzazione testo -->
            <Label fx:id="displayTextLabel" alignment="CENTER" maxWidth="400.0" minHeight="150.0" prefHeight="150.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-padding: 10px;" text="Il testo apparirÃ  qui..." textAlignment="CENTER" wrapText="true">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>

            <!-- Label per informazioni aggiuntive -->
