                    </VBox>
                </content>
            </ScrollPane>

            <HBox alignment="CENTER" spacing="20.0">
                <children>
                    <Button fx:id="nextButton" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5px;" text="Avanti" />
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
</VBox>