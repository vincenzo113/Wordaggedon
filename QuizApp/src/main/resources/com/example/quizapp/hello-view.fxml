<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.quizapp.MainController" stylesheets="@../css/login-style.css" styleClass="login-view">

  <padding>
    <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
  </padding>

  <!-- Container principale del form -->
  <VBox fx:id="formContainer" alignment="CENTER" maxWidth="300.0" spacing="15.0" styleClass="form-container">
    <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <!-- Titolo -->
    <Label fx:id="titleLabel" text="Benvenuto" styleClass="title-label">
      <font>
        <Font name="System Bold" size="24.0" />
      </font>
    </Label>

    <!-- Campo Username -->
    <TextField fx:id="usernameField" prefWidth="250.0" promptText="Username" styleClass="input-field" />

    <!-- Campo Password -->
    <PasswordField fx:id="passwordField" prefWidth="250.0" promptText="Password" styleClass="input-field" />

    <!-- Campo Email (nascosto inizialmente) -->
    <TextField fx:id="emailField" prefWidth="250.0" promptText="Email" styleClass="input-field"
               visible="false" managed="false" />

    <!-- Label per messaggi di errore/successo -->
    <Label fx:id="messageLabel" styleClass="message-label" visible="false" wrapText="true" />

    <!-- Bottone Login -->
    <Button fx:id="loginButton" defaultButton="true" prefWidth="250.0" text="Accedi"
            styleClass="primary-button" onAction="#handleLogin" />

    <!-- Bottone Registrazione (nascosto inizialmente) -->
    <Button fx:id="registerButton" prefWidth="250.0" text="Registrati"
            styleClass="primary-button" visible="false" managed="false" onAction="#handleRegister" />

    <!-- Bottone per switch modalitÃ  -->
    <Button fx:id="switchModeButton" text="Non hai un account? Registrati"
            styleClass="link-button" onAction="#toggleMode" />

  </VBox>
</VBox>